<%= form_for :store_credential, url: :feed  do |f| %>
  <div class="form-group">
    <%= f.label :api_key, 'API Key' %>
    <%= f.text_field :api_key, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :api_password, 'API Password' %>
    <%= f.text_field :api_password, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :store_name, 'Your Store Name' %>
    <%= f.text_field :store_name, class: 'form-control', required: true %>
  </div>
  <%= f.submit 'Get Product Feed', class: 'btn btn-success' %>
<% end %>
